{
  "$ref": "#/definitions/AeternityTransactionSignRequest",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "AeternityTransactionSignRequest": {
      "additionalProperties": false,
      "properties": {
        "callbackURL": {
          "type": "string"
        },
        "publicKey": {
          "type": "string"
        },
        "transaction": {
          "$ref": "#/definitions/AeternityUnsignedTransaction"
        }
      },
      "required": ["publicKey", "transaction"],
      "type": "object"
    },
    "AeternityUnsignedTransaction": {
      "additionalProperties": false,
      "properties": {
        "networkId": {
          "type": "string"
        },
        "transaction": {
          "type": "string"
        },
        "type": {
          "enum": ["unsigned"],
          "type": "string"
        }
      },
      "required": ["networkId", "transaction", "type"],
      "type": "object"
    }
  }
}
