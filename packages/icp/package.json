{
  "name": "@airgap/icp",
  "version": "0.13.10-beta.3",
  "description": "The @airgap/icp is an ICP implementation of the ICoinProtocol interface from @airgap/coinlib-core.",
  "keywords": [
    "airgap",
    "blockchain",
    "crypto",
    "icp"
  ],
  "license": "MIT",
  "homepage": "https://www.airgap.it",
  "repository": {
    "type": "git",
    "url": "https://github.com/airgap-it/airgap-coin-lib"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rm -rf ./dist && tsc && node scripts/copy-files-after-build.js",
    "build-scripts": "tsc scripts/*.ts",
    "lint": "tslint -c ./tslint.json --project ./tsconfig.json --format stylish --fix",
    "lint:prettier": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint-ci": "tslint -t json -o ../../lint-reports/icp.json --project . || true",
    "lint-ci:prettier": "prettier \"src/**/*.ts\" \"test/**/*.ts\" --list-different",
    "test": "",
    "test-ci": "nyc --reporter=lcov npm test",
    "test-legacy": "",
    "browserify": "browserify ./dist/index.js -p realpathify -s airgapCoinLibICP > ./dist/airgap-coinlib-icp.min.js"
  },
  "author": "Papers GmbH <contact@papers.ch> (https://papers.ch)",
  "peerDependencies": {
    "@airgap/coinlib-core": "^0.13.9",
    "@airgap/module-kit": "^0.13.9",
    "@airgap/serializer": "^0.13.9",
    "@stablelib/ed25519": "1.0.3"
  },
  "dependencies": {
    "@dfinity/candid": "^0.15.1",
    "@dfinity/identity-secp256k1": "^0.15.1",
    "@dfinity/nns": "^0.10.0",
    "@dfinity/principal": "^0.15.1",
    "@dfinity/utils": "^0.0.6",
    "isomorphic-fetch": "^3.0.0",
    "js-sha256": "^0.9.0",
    "secp256k1": "^5.0.0"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "test/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "text-summary"
    ],
    "report-dir": "../../coverage/icp",
    "sourceMap": true,
    "instrument": true
  },
  "gitHead": "8e8feb6788204501b7173aa825f5456c2a5f185b"
}
